# ─────────────────────────────────────────────
# Hetzner VPS – deploy user (daily)
# ─────────────────────────────────────────────
Host vps
    HostName 46.224.208.70
    User deploy
    IdentityFile ~/.ssh/id_ed25519_vps
    IdentityFile ~/.ssh/id_ed25519_vps_backup
    IdentitiesOnly yes
    ServerAliveInterval 30
    ServerAliveCountMax 3

# ─────────────────────────────────────────────
# Hetzner VPS – root (bootstrap / emergencies)
# ─────────────────────────────────────────────
Host vps-root
    HostName 46.224.208.70
    User root
    IdentityFile ~/.ssh/id_ed25519_vps
    IdentityFile ~/.ssh/id_ed25519_vps_backup
    IdentitiesOnly yes
    ServerAliveInterval 30
    ServerAliveCountMax 3
