# --------------------------------------------------
# Core
# --------------------------------------------------

APP_ENV=prod
SERVER_ADDR=:8080
LOG_LEVEL=info

# --------------------------------------------------
# Database (public config)
# --------------------------------------------------

POSTGRES_DB=initialsdb
POSTGRES_USER=initialsdb

# --------------------------------------------------
# Proof of Work (non-secret config)
# --------------------------------------------------

POW_ENABLE=true
POW_DIFFICULTY=21
POW_TTL_SECONDS=100

# --------------------------------------------------
# Body size limiter
# --------------------------------------------------

BODY_LIMIT_ENABLE=true
BODY_LIMIT_MAX_BYTES=4096

# --------------------------------------------------
# IP rate limiter
# --------------------------------------------------

IP_RATE_ENABLE=true
IP_RATE_MAX_REQUESTS=15
IP_RATE_WINDOW_MS=60000
